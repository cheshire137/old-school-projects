<% title ||= nil %>
<table>
  <% unless title.nil? %>
    <caption><%= title %></caption>
  <% end %>
  <thead>
    <tr>
      <% columns.each do |field_name| %>
        <th scope="col"><%= field_name %></th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% rows.each do |row_hash| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <% columns.each do |field_name| %>
          <td><%=
          if (value = row_hash[field_name]).nil?
            '<em>NULL</em>'
          else
            value
          end %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>